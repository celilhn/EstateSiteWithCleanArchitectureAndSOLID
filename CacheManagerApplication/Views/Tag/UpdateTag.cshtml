@model Domain.Models.Tag
@{
    ViewData["Title"] = "UpdateTag";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Tag</h4>
                    <p class="card-description">
                
                    </p>
                    <form asp-action="UpdateTag">
                        <div class="form-group">
                            <label>Id</label>
                            <input type="text" class="form-control" disabled value="@Model.Id">
                            <input type="text" class="form-control" asp-for="Id" name="Id" hidden="hidden" value="@Model.Id">
                        </div>
                        <div class="form-group" hidden="hidden">
                            <label>Id</label>
                            <input type="text" class="form-control" asp-for="InsertionDate" name="InsertionDate" hidden="hidden" value="@Model.InsertionDate">
                        </div>
                        <div class="form-group">
                            <label for="Text">Name</label>
                            <input type="text" class="form-control" asp-for="Text" name="Text" id="Text" value="@Model.Text">
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Text">Status</label>
                            @Html.DropDownList("Status", (IEnumerable<SelectListItem>)ViewBag.status, htmlAttributes: new { @class = "form-control" })
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>