@using Domain.Models
@model List<Domain.Models.Image>
@{
    ViewData["Title"] = "ListMemberImages";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<link rel="stylesheet" href="~/assets/css/datatable-style.css">

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tag List</h4>
            <div class="row">
                <div class="col-md-12">
                    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Member</th>
                            <th>Type</th>
                            <th>Image</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Member</th>
                            <th>Type</th>
                            <th>Image</th>
                            <th>Delete</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        @foreach (Image image in Model)
                        {
                            <tr>
                                <td>@image.Id</td>
                                <td>@image.Member.Name</td>
                                <td>@image.Type</td>
                                <td>
                                    <img src="~/assets/images/@image.Url" width="245" height="175"/>
                                </td>
                                <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" onclick="window.location.href = '/Member/DeleteMemberImage?Id=@image.Id';"><span class="mdi mdi-delete-forever"></span></button></p></td>
                            </tr>
                        }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>

<script>
    setTimeout(function() { 
        $('#datatable').dataTable();
    
        $("[data-toggle=tooltip]").tooltip();
    }, 500);
</script>

