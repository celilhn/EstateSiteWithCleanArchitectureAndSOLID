@model Domain.Models.MemberShipPlan
@{
    ViewData["Title"] = "CreateMemberShipPlan";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Member Ship Plan</h4>
                    <p class="card-description">
                
                    </p>
                    <form asp-action="CreateMemberShipPlan">
                        <div class="form-group">
                            <label for="Text">Name</label>
                            <input type="text" class="form-control" asp-for="Name" name="Name" id="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Text">Icon Url</label>
                            <input type="text" class="form-control" asp-for="IconUrl" name="IconUrl" id="IconUrl">
                            <span asp-validation-for="IconUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Text">Price</label>
                            <input type="number" class="form-control" asp-for="Price" name="Price" id="Price">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Text">List Count</label>
                            <input type="number" class="form-control" asp-for="ListCount" name="ListCount" id="ListCount">
                            <span asp-validation-for="ListCount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Text">Featured List Count</label>
                            <input type="number" class="form-control" asp-for="FeaturedListCount" name="FeaturedListCount" id="Text">
                            <span asp-validation-for="FeaturedListCount" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

